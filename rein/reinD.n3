@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:  <http://www.w3.org/2002/07/owl#> .
@prefix log: <http://www.w3.org/2000/10/swap/log#> .
@prefix rein: <rein.n3#> .
@prefix ont: <ontD.n3#> .
@prefix : <#> .

# Unix style access control 

<> rein:hasReasoner <reasonerD.n3>.

# if not read/write/execute=set, then unset by default.
:PropertySet a rdfs:Class.
:Set a :PropertySet.
:NotSet a :PropertySet.


:read a rdf:Property;
	rdfs:domain ont:File;
	rdfs:range :PropertySet.

:write a rdf:Property;
	rdfs:domain ont:File;
	rdfs:range :PropertySet.

:execute a rdf:Property;
	rdfs:domain ont:File;
	rdfs:range :PropertySet.

# owners access rights
:readU a rdf:Property;
	rdfs:subProperty :read.
:writeU a rdf:Property;
	rdfs:subProperty :write.
:executeU a rdf:Property;
	rdfs:subProperty :execute.

# access rights of users in the owner group
:readG a rdf:Property;
	rdfs:subProperty :read.
:writeG a rdf:Property;
	rdfs:subProperty :write.
:executeG a rdf:Property;
	rdfs:subProperty :execute.

# users who are not the owner and do not belong to owner-group
:readO a rdf:Property;
	rdfs:subProperty :read.
:writeO a rdf:Property;
	rdfs:subProperty :write.
:executeO a rdf:Property;
	rdfs:subProperty :execute.

# for changing permissions on a file/dir
:Chmod a rdfs:Class.
:file a rdf:Property;
        rdfs:range ont:File;
        rdfs:domain :Chmod.

:rwx a rdf:Property;
        rdfs:domain :Chmod.

:set a rdf:Property;
        rdfs:domain :Chmod;
        rdfs:range :PropertySet.

#ends
